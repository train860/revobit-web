{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "helpers/*": ["src/helpers/*"],
      "pages/*": ["src/pages/*"],
      "services/*": ["src/services/*"],
      "styles/*": ["src/styles/*"],
      "types/*": ["src/types/*"],
      "hooks/*": ["src/hooks/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/assets/icons/trends.svg"
  ],
  "exclude": ["node_modules"]
}
